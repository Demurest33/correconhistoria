---
import Layout from '../layouts/Layout.astro';
import Navbar from "../components/Navbar.astro";
import fondo_carrera from '../assets/fondo_carrera.png';
import Image from "astro/components/Image.astro";
import medalla_kit from '../assets/medalla_kit.png';
import bolsa_kit from '../assets/bolsa_kit.png';
import camisa_kit from '../assets/camisa_kit.png';
---

<Layout
  title="Corre con Historia - Kit"
  description="Descubre el kit de inscripción y los beneficios exclusivos que recibirás al unirte a nuestra carrera."
  bgImage={fondo_carrera.src}
  
>
    <Navbar />

    <h1 class="text-cyan-400 text-5xl text-center my-4">KIT DEL CORREDOR</h1>
    <p class="text-white text-xl md:text-3xl max-w-6xl text-center mx-auto mb-8">
      Esto es lo que tendrás al correr
    </p>

    <div class="flex">
      <Image src={camisa_kit} alt="Camisa del kit" class="w-1/3 mx-auto" />
      <Image src={medalla_kit} alt="Medalla del kit" class="w-1/3 mx-auto" />
      <Image src={bolsa_kit} alt="Bolsa del kit" class="w-1/3 mx-auto" />
    </div>

</Layout>  